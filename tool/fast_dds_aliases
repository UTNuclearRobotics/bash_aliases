### Aliases & commands for running discovery servers using FastDDS
### use this to run ROS2 over the campus networks

# Install the systemd service for the discovery server on your machine
alias install_fastdds_discovery_server='$HOME/.nrg_bash/fastdds/install_fastdds_service.sh'

# Enabling/disabling startup launch for FastDDS discovery server
alias enable_discovery_server_on_startup='sudo systemctl enable fastdds_discovery_server.service'
alias disable_discovery_server_on_startup='sudo systemctl disable fastdds_discovery_server.service'

# Manual start/stop of the server
alias start_discovery_server='sudo systemctl start fastdds_discovery_server.service'
alias stop_discovery_server='sudo systemctl stop fastdds_discovery_server.service'
